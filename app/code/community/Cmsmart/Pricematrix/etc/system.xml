<config>
    <tabs>
        <cmsmart_tab>
            <label>Cmsmart</label>
            <sort_order>10</sort_order>
        </cmsmart_tab>
    </tabs>
    <sections>
        <pricematrix>
            <label>Price Matrix</label>
            <tab>cmsmart_tab</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <cmsmart translate="label">
                    <label>License</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[<p id="license-messages"></p>]]>
                        <![CDATA[
                    <h5 style="padding-bottom: 10px; font-family: Arial">Magento Order Upload Extension</h5>

                    <div style="padding-bottom: 10px"><p style="float: left; width: 205px">Version</p><p>1.0.0</p></div>
                    <div style="padding-bottom: 10px"><p style="float: left; width: 205px">License</p><p>GPL</p></div>
                    <div><p style="float: left; width: 205px">Copyright</p><p>(c) 2013-2014 Cmsmart.net</p></div>
                    ]]>
                    </comment>
                    <fields>
                        <license_skuproduct translate="label comment">
                            <label>Sku Product</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><your_first_field_name>1</your_first_field_name></depends>
                        </license_skuproduct>
                        <license_key translate="label comment">
                            <label>License</label>
                            <comment>
                                <![CDATA[Please fill the license key, more information on <a href="http://cmsmart.net/license" target="_blank" style='text-decoration: none'><font color="#218bca">http://cmsmart.net/license</font></a>]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </license_key>
                        <license_domain translate="label comment">
                            <label>Domain</label>
                            <comment>
                                <![CDATA[Example: <a href="#" target="_blank" style='text-decoration: none'><font color="#218bca">http://abc.com</font></a> or <a href="#" target="_blank" style='text-decoration: none'><font color="#218bca">http://sub.abc.com</font></a>]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </license_domain>
                    </fields>
                </cmsmart>
                <general>
                    <label>General</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enabled/Disabled extension.</comment>
                        </enabled>
                        <background_color>
                            <label>Background Color</label>
                            <frontend_type>text</frontend_type>
                            <validate>color</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Specify the background color. Default: 4D8A9D</comment>
                        </background_color>
                        <text_color>
                            <label>Text Color</label>
                            <frontend_type>text</frontend_type>
                            <validate>color</validate>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Specify the text color. Default: FFFFFF</comment>
                        </text_color>
                        <delimiter>
                            <label>Delimiter</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Specify delimiter between attributes. Default: x</comment>
                        </delimiter>
                        <!--<rowspan>-->
                        <!--<label>Row Span</label>-->
                        <!--<frontend_type>select</frontend_type>-->
                        <!--<source_model>adminhtml/system_config_source_yesno</source_model>-->
                        <!--<sort_order>5</sort_order>-->
                        <!--<show_in_default>1</show_in_default>-->
                        <!--<show_in_website>1</show_in_website>-->
                        <!--<show_in_store>1</show_in_store>-->
                        <!--<comment>Row span the first attributes vertical group. Default: Yes</comment>-->
                        <!--</rowspan>-->
                        <!--<colspan>-->
                        <!--<label>Column Span</label>-->
                        <!--<frontend_type>select</frontend_type>-->
                        <!--<source_model>adminhtml/system_config_source_yesno</source_model>-->
                        <!--<sort_order>6</sort_order>-->
                        <!--<show_in_default>1</show_in_default>-->
                        <!--<show_in_website>1</show_in_website>-->
                        <!--<show_in_store>1</show_in_store>-->
                        <!--<comment>Column span the first attributes horizontal group. Default: Yes</comment>-->
                        <!--</colspan>-->
                        <quantity>
                            <label>Quantity Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enter the title of quantity option if you have. Example: Quantity</comment>
                        </quantity>
                    </fields>
                </general>
            </groups>
        </pricematrix>
    </sections>
</config>